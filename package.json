{
  "name": "clash-of-code",
  "displayName": "ClashOfCode",
  "description": "Competitive coding test monitor",
  "version": "4.0.0",
  "publisher": "oakir",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onCommand:test-monitor.start",
    "workspaceContains:package.json"
  ],
  "changelog": {
      "4.0.0": [
        "Added test monitoring capabilities",
        "Real time test monitoring",
        "Test results in the status bar"
      ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akiroussama/codeclash.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cpu-features": "^0.0.9",
    "os-name": "^5.1.0",
    "systeminformation": "^5.21.7"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "test-monitor.start",
        "title": "Start Test Monitor",
        "category": "Test Monitor",
        "icon": "$(beaker)"
      },
      {
        "command": "test-monitor.startWatch",
        "title": "Start Test Watch Mode",
        "category": "Test Monitor",
        "icon": "$(eye)"
      },
      {
        "command": "test-monitor.stopWatch",
        "title": "Stop Test Watch Mode",
        "category": "Test Monitor",
        "icon": "$(eye-closed)"
      }
    ],
    "keybindings": [
      {
        "command": "test-monitor.startWatch",
        "key": "ctrl+alt+w",
        "mac": "cmd+alt+w",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "test-monitor.start",
          "group": "navigation",
          "when": "resourceFilename =~ /\\.(test|spec)\\.(js|ts|jsx|tsx)$/"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.9",
    "@types/vscode": "^1.89.0",
    "ts-loader": "^9.5.1",
    "webpack-cli": "^5.1.4"
  }
}
