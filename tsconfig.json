{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es6"
		],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
